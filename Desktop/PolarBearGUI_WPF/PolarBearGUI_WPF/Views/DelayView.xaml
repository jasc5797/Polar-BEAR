<UserControl x:Class="PolarBearGUI_WPF.Views.DelayView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PolarBearGUI_WPF.Views"
             mc:Ignorable="d" >
    <Grid>
        <Grid VerticalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0" Content="Type:"/>
            <Label Grid.Column="1" x:Name="TypeLabel" Content="{Binding Step.Type}"/>
            <Label Grid.Column="2" Content="Interval:"></Label>
            <Label Grid.Column="3" Content="{Binding Step.Interval}"/>
        </Grid>
    </Grid>
</UserControl>
